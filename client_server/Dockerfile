FROM nginx
# ------------------------------------------------------------------
COPY ./web/client_server/nginx.conf /etc/nginx/nginx.conf
# ------------------------------------------------------------------
# 由於 安裝套件有互動界面會導致報錯 所以先行關閉
ENV DEBIAN_FRONTEND noninteractive
# ------------------------------------------------------------------
# 寫入進入W
ENTRYPOINT [ "/bin/bash", "-c" ]